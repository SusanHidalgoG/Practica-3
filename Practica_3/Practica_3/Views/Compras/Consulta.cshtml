@model List<Practica_3.Models.Compras>

@{
    ViewBag.Title = "Consulta de Compras";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5 mb-5">
    <header class="py-5 bg-light border-bottom mb-4">
        <div class="container">
            <div class="text-center my-5">
                <h1 class="fw-bolder">Consulta de Compras</h1>
                <p class="lead mb-0">Aquí puedes consultar los productos, los primeros en la lista son los pendientes.</p>
            </div>
        </div>
    </header>

    <div class="table-responsive">
        @if (Model != null && Model.Any())
        {
            <table class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Código Compra</th>
                        <th>Descripción</th>
                        <th>Precio</th>
                        <th>Saldo</th>
                        <th>Estado</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.CompraId</td>
                            <td>@item.Descripcion</td>
                            <td>₡@item.Precio.ToString("N2")</td>
                            <td>₡@item.Saldo.ToString("N2")</td>
                            <td>@item.Estado</td>
                            <td>@(item.Fecha.HasValue ? item.Fecha.Value.ToString("dd/MM/yyyy") : "")</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <div class="alert alert-warning text-center">No hay compras registradas.</div>
        }
    </div>
</div>
